<!DOCTYPE html>
<html>

  <head>
    {{! Document Settings }}

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    {{! Styles'n'Scripts }}
    <!-- Stylesheet -->
    <!-- link rel='stylesheet' href='/css/style.css' type='text/css' media='all' /-->
    <link href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">

    {{#if_env this compare="development"}}

    <link rel='stylesheet' href='{{siteurl}}/css/fonts.css' type='text/css' media='all'>
    <link rel="stylesheet/less" type="text/css" href='{{siteurl}}/css/style.less' />
    <script src="{{siteurl}}/js/vendor/less-1.5.0.min.js" type="text/javascript"></script>

    {{else}}

    <link rel='stylesheet' href='{{siteurl}}/css/style.min.css' type='text/css' media='all'>

    {{/if_env}}

    <script src="{{siteurl}}/js/vendor/jquery.min.js" type="text/javascript"></script>

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
  </head>

  <!-- env: {{ is_development }}-->
  <body class="{{body_class}}">
    <div id="the-red-line"></div>
    <div id="wrapper">
      {{! Everything else gets inserted here }}
      {{{body}}}
    </div>
      {{! Ghost outputs important scripts and data with this tag }}
        {{!ghost_foot}}

        {{! Main javascript file }}
    {{#if_env this compare="development"}}

    <script type="text/javascript" src="{{siteurl}}/js/vendor/jquery.stickem.js"></script>
    <script type="text/javascript" src="{{siteurl}}/js/vendor/jquery.color.min.js"></script>
    <script type="text/javascript" src="{{siteurl}}/js/vendor/storyjs.embed.js"></script>
    <!-- script type="text/javascript" src="{{siteurl}}/js/vendor/bootstrap.js"></script -->
    <script type="text/javascript" src="{{siteurl}}/js/vendor/handlebars-1.1.2.js"></script>
    <script type="text/javascript" src="{{siteurl}}/js/vendor/jquery.scrolltofixed.js"></script>
    <!--script type="text/javascript" src="{{siteurl}}/js/vendor/jquery.hypher.js"></script-->
    <!--script type="text/javascript" src="{{siteurl}}/js/vendor/jquery.hyphenation-patterns.en-us.js"></script-->
    <script type="text/javascript" src="{{siteurl}}/js/general.js"></script>
    
    {{else}}

    <script type="text/javascript" src="{{siteurl}}/js/poltergeist.min.js"></script>

    {{/if_env}}
  </body>
</html>