{{! Everything inside the #post tags pulls data from the post }}

  <section class="post-thumbnail">
    <a href="{{url}}" title="{{title}}">
      <h2 style="margin-left:40px; margin-right:40px">{{{aime_title}}}</h2>

      <div class="published_at">{{date published_at format="DD MMMM YYYY"}}</div>
    </a>
      {{>loop-single-tags}}
    <a href="{{url}}" title="{{title}}">
      <div class="content">
        <p>{{{aime_content words="40"}}} ...</p>
      </div>
      <div class="ellipsis mode">[...]</div>
    </a>
    <div class="middot">&middot;</div>
  </section>
